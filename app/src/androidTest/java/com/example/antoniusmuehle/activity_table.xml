<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFE7E1">

    <!-- ===================== TOPBAR ===================== -->
    <!-- ✅ HorizontalScrollView verhindert "zu viele Buttons" Probleme -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/backToRoomsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← RÄUME" />

            <Button
                android:id="@+id/seedTablesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="TISCHE ANLEGEN" />

            <Button
                android:id="@+id/editToggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="BEARBEITEN" />

            <Button
                android:id="@+id/savePlanBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="SPEICHERN"
                android:enabled="false" />

            <!-- ✅ Spacer: schiebt Plus-Button nach rechts -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- ✅ PLUS-BUTTON OBEN RECHTS (öffnet Dialog "Tisch anlegen") -->
            <ImageButton
                android:id="@+id/addTableBtn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_add"
                android:contentDescription="Tisch hinzufügen"
                android:padding="6dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ===================== PLANBEREICH ===================== -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <!-- Außenabstand damit nix am Screen klebt -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Rahmen + Innenabstand -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/plan_frame_bg"
                    android:padding="24dp">

                    <!-- Canvas (Platz für alle Tische) -->
                    <FrameLayout
                        android:id="@+id/planCanvas"
                        android:layout_width="1400dp"
                        android:layout_height="900dp"
                        android:background="#F4ECE6" />

                </FrameLayout>
            </FrameLayout>

        </ScrollView>
    </HorizontalScrollView>

</LinearLayout>
