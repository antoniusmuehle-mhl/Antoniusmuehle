<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splitRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#EFE7E1">

    <TextView
        android:id="@+id/splitTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teilrechnung auswählen"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3A2A20" />

    <TextView
        android:id="@+id/splitHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Markiere Positionen und stelle ein, wie viele bezahlt werden sollen."
        android:textSize="14sp"
        android:textColor="#3A2A20"
        android:layout_marginTop="6dp" />

    <ListView
        android:id="@+id/splitList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="10dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/totalSelectedTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Teilbetrag: 0,00 €"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#3A2A20"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/payPartBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TEILZAHLUNG"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/closeSplitBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="SCHLIESSEN"/>
    </LinearLayout>

</LinearLayout>
